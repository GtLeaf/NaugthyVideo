<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_whole_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_home_movie_img"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="fitXY"
            android:transitionName="@string/transition_movie_img" />


        <TextView
            android:id="@+id/tv_home_movie_direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_home_movie_img"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/label_milk_coffe_9"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:textSize="15sp"
            android:transitionName="@string/transition_movie_direct_name" />

        <TextView
            android:id="@+id/tv_home_movie_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_movie_direct"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/label_grapefruit_9"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="哈哈哈哈哈哈哈"
            android:textSize="15sp"
            android:transitionName="@string/transition_movie_genre" />

        <TextView
            android:id="@+id/tv_home_movie_averge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_home_movie_img"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:text="9.6"
            android:textSize="55sp"
            android:transitionName="@string/transition_movie_average" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

