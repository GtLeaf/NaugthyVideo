<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.pc_0775.naugthyvideo.view.ActivityLogin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="28sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@color/grey"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl_login_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="账号："
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_login_username"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_login_name"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_login_password"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/rl_login_name">
                <TextView
                    android:id="@+id/tv_login_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="密码："
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/et_login_passowrd"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_login_password"
                    android:textSize="20sp" />
                <Switch
                    android:id="@+id/switch_login_if_show"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/et_login_passowrd"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selector_password_icon"
                    android:track="@drawable/switch_track_login"
                    android:thumb="@drawable/switch_track_login"
                    android:textOn=" "
                    android:textOff=" "
                    android:thumbTextPadding="6dp"
                    android:switchMinWidth="24dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/rl_login_password"
                android:text="快速注册"
                android:textColor="@color/blue"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>