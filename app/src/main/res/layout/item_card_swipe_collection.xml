<?xml version="1.0" encoding="utf-8"?>

<com.example.pc_0775.naugthyvideo.MyViewControl.MyLayout.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sl_swipe_collection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_swipe_collection_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_swipe_collection_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#e92f2f"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_swipe_collection_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_card_swipe_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="测试"
            android:textColor="@color/white"
            android:textSize="22sp"/>
    </RelativeLayout>
</com.example.pc_0775.naugthyvideo.MyViewControl.MyLayout.SwipeLayout>
