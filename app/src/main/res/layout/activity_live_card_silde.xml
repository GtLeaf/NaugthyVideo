<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_card_slide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc_0775.naugthyvideo.view.ActivityCardSilde">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_card_slide"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <!--右侧抽屉-->
    <LinearLayout
        android:id="@+id/rl_right_layout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/black"
        android:clickable="true"
        android:focusable="true">
        <include layout="@layout/card_slide_right_layout"/>
    </LinearLayout>

    <!--左侧抽屉-->
    <LinearLayout
        android:id="@+id/rl_left_layout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <include
            layout="@layout/card_silde_collection_layout"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>