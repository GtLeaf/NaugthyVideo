<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_whole_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_home_movie_img"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@color/gray"
                android:scaleType="fitXY" />



            <TextView
                android:id="@+id/tv_home_movie_direct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/iv_home_movie_img"
                android:background="@drawable/label_milk_coffe_9"
                android:gravity="center_horizontal|center_vertical"
                android:maxLines="1"
                android:paddingRight="5dp"
                android:paddingLeft="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_home_movie_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_home_movie_direct"
                android:background="@drawable/label_grapefruit_9"
                android:gravity="center_horizontal|center_vertical"
                android:paddingRight="5dp"
                android:paddingLeft="15dp"
                android:text="哈哈哈哈哈哈哈"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_home_movie_averge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_home_movie_img"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:text="9.6"
                android:textSize="55sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

